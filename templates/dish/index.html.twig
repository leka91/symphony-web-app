{% extends 'base.html.twig' %}

{% block title %}Dishes{% endblock %}

{% block body %}

<div class="container">
    <h2>Dishes</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Description</td>
            </tr>
        </thead>

        <tbody>

            {% for dish in dishes %}
            <tr>
                <td>{{ dish.id }}</td>
                <td>{{ dish.name }}</td>
                <td>{{ dish.description }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
